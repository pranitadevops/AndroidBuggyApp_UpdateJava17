<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <Button
        android:id="@+id/artOfGoodTestCases"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="left"
        android:selectAllOnFocus="true"
        android:text="Art of Good Test Cases"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/background_light"
        android:background="@drawable/ic_button_outline_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/artDivider"
        android:layout_width="441dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/artOfGoodTestCases" />

    <Button
        android:id="@+id/artOfQuickTestCases"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:imeOptions="actionDone"
        android:selectAllOnFocus="true"
        android:text="Art of Quick Test Cases"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/background_light"
        android:background="@drawable/ic_button_outline_style"
        android:gravity="left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/artDivider" />

    <View
        android:id="@+id/artQuickDivider"
        android:layout_width="441dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/artOfQuickTestCases" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:text="Settings"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/background_light"
        android:background="@drawable/ic_button_outline_style"
        android:gravity="left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/artQuickDivider" />

    <View
        android:id="@+id/settingsDivider"
        android:layout_width="441dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsButton" />

    <Button
        android:id="@+id/UserInfo"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:text="User Info"
        android:textColor="@color/black"
        app:backgroundTint="@android:color/background_light"
        android:background="@drawable/ic_button_outline_style"
        android:gravity="left"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsDivider"
        app:layout_constraintVertical_bias="0.00" />

    <View
        android:id="@+id/userInfoDivider"
        android:layout_width="441dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserInfo" />

    <Button
        android:id="@+id/resetPassword"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        app:backgroundTint="@android:color/background_light"
        android:background="@drawable/ic_button_outline_style"
        android:clickable="true"
        android:gravity="left"
        android:text="Password Reset"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userInfoDivider" />

</androidx.constraintlayout.widget.ConstraintLayout>